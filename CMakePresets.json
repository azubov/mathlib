{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "name": "release-shared",
      "displayName": "Release build (shared)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-shared",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "ON",
        "BUILD_TESTING": "OFF"
      }
    },
    {
      "name": "release-static",
      "displayName": "Release build (static)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-static",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_TESTING": "OFF"
      }
    },
    {
      "name": "debug-with-tests",
      "displayName": "Debug build (with tests)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "debug-tidy",
      "displayName": "Debug build (clang-tidy only)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/cmake-build-debug-tidy",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_SHARED_LIBS": "OFF",
        "BUILD_TESTING": "OFF",
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--warnings-as-errors=*"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "release-shared",
      "configurePreset": "release-shared"
    },
    {
      "name": "release-static",
      "configurePreset": "release-static"
    },
    {
      "name": "debug-with-tests",
      "configurePreset": "debug-with-tests"
    },
    {
      "name": "debug-tidy",
      "configurePreset": "debug-tidy"
    }
  ],
  "testPresets": [
    {
      "name": "debug-with-tests",
      "configurePreset": "debug-with-tests",
      "execution": {
        "jobs": 4
      }
    }
  ]
}
