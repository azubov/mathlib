{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 15,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "17",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF"
      }
    },
    {
      "name": "debug",
      "inherits": "default",
      "description": "Debug build with tests enabled",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "MATHLIB_BUILD_TESTS": "ON",
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--warnings-as-errors=*"
      }
    },
    {
      "name": "release",
      "inherits": "default",
      "description": "Release build (optimized, no tests)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "MATHLIB_BUILD_TESTS": "OFF"
      }
    },
    {
      "name": "shared",
      "inherits": "release",
      "description": "Release build with shared library",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "ON"
      }
    },
    {
      "name": "static",
      "inherits": "release",
      "description": "Release build with static library",
      "cacheVariables": {
        "BUILD_SHARED_LIBS": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "shared",
      "configurePreset": "shared"
    },
    {
      "name": "static",
      "configurePreset": "static"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {"outputOnFailure": true}
    }
  ]
}
